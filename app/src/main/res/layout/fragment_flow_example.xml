<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/flow_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="No Flow Data"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/start_flow_button"
        app:layout_constraintEnd_toEndOf="@id/start_flow_button" />

    <TextView
        android:id="@+id/state_flow_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="No Flow Data"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/start_state_flow_button"
        app:layout_constraintEnd_toEndOf="@id/start_state_flow_button" />

    <Button
        android:id="@+id/start_flow_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toBottomOf="@id/flow_text"
        app:layout_constraintEnd_toStartOf="@id/start_state_flow_button"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Connect to Flow" />

    <Button
        android:id="@+id/start_state_flow_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toBottomOf="@id/state_flow_text"
        app:layout_constraintStart_toEndOf="@id/start_flow_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Start State Flow" />

</androidx.constraintlayout.widget.ConstraintLayout>
